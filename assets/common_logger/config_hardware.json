{
    "version":1,
    "formatters":{
        "hardware":{
            "format":"{asctime} \t {message}",
            "datefmt":"%y-%m-%d %H:%M:%S",
            "style":"{"
        }
    },
    "handlers":{
        "hardware":{
            "class":"logging.FileHandler",
            "level":"INFO",
            "formatter":"hardware",
            "encoding":"utf8",
            "filename":"hardware.log"
        }
    },
    "root":{
        "level":"INFO",
        "handlers":[
            "hardware"
        ]
    }
}
